<Shell
    x:Class="LazApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LazApp"
    xmlns:views="clr-namespace:LazApp.Views"
    Title="LazApp">
    <FlyoutItem Title="Bronze" FlyoutIcon="{StaticResource IconOne}">
        <Tab Title="Brandeinsatz" Icon="{StaticResource Fire}">
            <ShellContent
                Title="Brandeinsatz"
                ContentTemplate="{DataTemplate views:LevelStartPage}"
                Route="levelstart?level=Bronze"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Silber" FlyoutIcon="{StaticResource IconTwo}">
        <Tab Title="Brandeinsatz" Icon="{StaticResource Fire}">
            <ShellContent
                Title="Brandeinsatz"
                ContentTemplate="{DataTemplate views:GanttPage}"
                Route="gantt?scenario=BrandeinsatzSilber"/>
        </Tab>
        <Tab Title="Hilfeleistung" Icon="{StaticResource CarCrash}">
            <ShellContent
                Title="Hilfeleistung"
                ContentTemplate="{DataTemplate views:GanttPage}"
                Route="gantt?scenario=HilfeleistungSilber"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Gold" FlyoutIcon="{StaticResource IconTwo}">
        <Tab Title="Brandeinsatz" Icon="{StaticResource Fire}">
            <ShellContent
                Title="Brandeinsatz"
                ContentTemplate="{DataTemplate views:LevelStartPage}"
                Route="levelstart?level=Gold"/>
        </Tab>
        <Tab Title="Hilfeleistung" Icon="{StaticResource CarCrash}">
            <ShellContent
                Title="Hilfeleistung"
                ContentTemplate="{DataTemplate views:LevelStartPage}"
                Route="levelstart?level=Gold"/>
        </Tab>
        <Tab Title="Theorie" Icon="{StaticResource Brain}">
            <ShellContent
                Title="Theorie"
                ContentTemplate="{DataTemplate views:QuizPage}"
                Route="quiz"/>
        </Tab>
    </FlyoutItem>
